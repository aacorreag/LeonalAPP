<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leonal.ui.controller.FacturacionController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox spacing="5.0">
        <children>
            <Label styleClass="title-label" text="Gestión de Facturas" />
            <Label styleClass="subtitle-label" text="Crear y administrar facturas del sistema." />
        </children>
    </VBox>

    <TableView fx:id="tblFacturas" prefHeight="300.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNumero" text="Número" prefWidth="120" />
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
            <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200" />
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
            <TableColumn fx:id="colTotal" text="Total" prefWidth="100" />
        </columns>
    </TableView>
</VBox>
