<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25.0" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leonal.ui.controller.PagoController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox spacing="5.0">
        <children>
            <Label styleClass="title-label" text="GestiÃ³n de Pagos" />
            <Label styleClass="subtitle-label" text="Registrar y administrar pagos de facturas." />
        </children>
    </VBox>

    <VBox styleClass="card" spacing="10.0">
        <children>
            <Label text="Registrar Pago" style="-fx-font-size: 14; -fx-font-weight: bold" />
            
            <GridPane hgap="15.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>
                
                <Label text="Factura:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="cbFactura" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Monto Factura:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label fx:id="lblMontoFactura" text="0.00" GridPane.columnIndex="3" GridPane.rowIndex="0" style="-fx-font-weight: bold" />
                
                <Label text="Monto a Pagar:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtMonto" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Estado Factura:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label fx:id="lblEstadoFactura" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                
                <Label text="Forma de Pago:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <ComboBox fx:id="cbFormaPago" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                
                <Label text="Referencia:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="txtReferencia" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                
                <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextArea fx:id="txtaObservaciones" wrapText="true" prefRowCount="3" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />
            </GridPane>
            
            <HBox spacing="10.0">
                <Button text="Registrar Pago" onAction="#handleRegistrarPago" />
                <Button text="Limpiar" onAction="#handleLimpiar" />
            </HBox>
        </children>
    </VBox>

    <VBox styleClass="card" spacing="10.0" VBox.vgrow="ALWAYS">
        <children>
            <Label text="Historial de Pagos" style="-fx-font-size: 14; -fx-font-weight: bold" />
            
            <TableView fx:id="tblPagos" prefHeight="300.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colFactura" text="Factura" prefWidth="120" />
                    <TableColumn fx:id="colMonto" text="Monto" prefWidth="100" />
                    <TableColumn fx:id="colFormaPago" text="Forma de Pago" prefWidth="150" />
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150" />
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
                </columns>
            </TableView>
        </children>
    </VBox>
</VBox>