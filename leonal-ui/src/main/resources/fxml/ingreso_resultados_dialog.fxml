<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20"
      prefWidth="650"
      styleClass="content-padding"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.leonal.ui.controller.IngresoResultadosDialogController">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <children>

        <!-- TÍTULO -->
        <VBox spacing="5">
            <children>
                <Label fx:id="lblTitulo"
                       text="Resultados de Orden"
                       styleClass="title-label"/>

                <Label text="Ingrese los hallazgos técnicos para cada examen."
                       styleClass="subtitle-label"/>
            </children>
        </VBox>

        <!-- LISTA DE EXÁMENES -->
        <ScrollPane fitToWidth="true"
                    VBox.vgrow="ALWAYS"
                    style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;">

            <content>
                <VBox fx:id="vboxExamenes"
                      spacing="15">

                    <padding>
                        <Insets right="10"/>
                    </padding>

                    <!--
                      Aquí se agregan dinámicamente tarjetas de examen con esta estructura esperada:

                      [ Nombre del examen ]
                      Rango normal: min – max unidad

                      [ Resultado ]  unidad   ☐ Resultado fuera de rango
                      [ Observaciones (si aplica) ]
                    -->

                </VBox>
            </content>
        </ScrollPane>

        <!-- BOTONES -->
        <HBox spacing="15"
              alignment="CENTER_RIGHT">

            <children>
                <Button text="Cancelar"
                        onAction="#cancelar"
                        styleClass="button-secondary"/>

                <Button text="Guardar Resultados"
                        onAction="#guardar"
                        styleClass="button-primary"/>
            </children>

            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </HBox>

    </children>
</VBox>
