<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="25.0" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.leonal.ui.controller.FacturacionController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <VBox spacing="5.0">
        <children>
            <Label styleClass="title-label" text="Gestión de Facturas" />
            <Label styleClass="subtitle-label" text="Crear y administrar facturas del sistema." />
        </children>
    </VBox>

    <VBox styleClass="card" spacing="10.0">
        <children>
            <Label text="Seleccionar Orden para Facturación" style="-fx-font-size: 14; -fx-font-weight: bold" />
            
            <HBox spacing="15.0" alignment="CENTER_LEFT">
                <Label text="Órdenes Disponibles:" />
                <ComboBox fx:id="cbOrdenes" prefWidth="300" />
                <Button fx:id="btnCargarOrden" text="Cargar Orden" onAction="#handleCargarOrden" />
            </HBox>
        </children>
    </VBox>

    <VBox styleClass="card" spacing="10.0">
        <children>
            <Label text="Datos de Factura" style="-fx-font-size: 14; -fx-font-weight: bold" />
            
            <GridPane hgap="15.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>
                
                <Label text="Número Orden:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="lblNumeroOrden" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                
                <Label text="Paciente:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                <Label fx:id="lblPaciente" text="-" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                
                <Label text="Documento:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <Label fx:id="lblDocumento" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="Subtotal:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <Label fx:id="lblSubtotal" text="0.00" GridPane.columnIndex="3" GridPane.rowIndex="1" style="-fx-font-weight: bold" />
                
                <Label text="Descuento:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtDescuento" GridPane.columnIndex="1" GridPane.rowIndex="2" onKeyReleased="#handleCalcularTotal" />
                
                <Label text="Impuesto:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                <TextField fx:id="txtImpuesto" GridPane.columnIndex="3" GridPane.rowIndex="2" onKeyReleased="#handleCalcularTotal" />
                
                <Label text="Total:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <Label fx:id="lblTotal" text="0.00" GridPane.columnIndex="3" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-font-size: 14" />
                
                <Label text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextArea fx:id="txtaObservaciones" wrapText="true" prefRowCount="3" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="4" />
            </GridPane>
            
            <HBox spacing="10.0">
                <Button fx:id="btnGuardar" text="Guardar Factura" onAction="#handleGuardar" />
                <Button fx:id="btnLimpiar" text="Limpiar" onAction="#handleLimpiar" />
            </HBox>
        </children>
    </VBox>

    <VBox styleClass="card" spacing="10.0" VBox.vgrow="ALWAYS">
        <children>
            <HBox spacing="15.0">
                <Label text="Filtrar por estado:" />
                <ComboBox fx:id="cbEstado" prefWidth="150" />
                <Button fx:id="btnBuscar" text="Buscar" onAction="#handleBuscar" />
                <Button fx:id="btnImprimir" text="Imprimir Seleccionada" onAction="#handleImprimir" />
            </HBox>
            
            <TableView fx:id="tblFacturas" prefHeight="300.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNumero" text="Número" prefWidth="120" />
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
                    <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200" />
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
                    <TableColumn fx:id="colTotal" text="Total" prefWidth="100" />
                </columns>
            </TableView>
        </children>
    </VBox>
</VBox>
